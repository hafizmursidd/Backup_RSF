@inherits R_Page

@attribute [R_Page(Title = "Journal Detail")]

<div hidden="@IsModalHidden">

    <R_StackLayout Row>
        <R_ItemLayout>
            <R_Label Class="me-3">Reference No.:</R_Label>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_TextBox @bind-Value="_viewModelGLB00200Detail.CurrentReversingJournal.CREF_NO"
                       R_ConductorSource="@_conductorJournalPeriod"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>

        <R_ItemLayout>
            <R_Label Class="me-3">Amount</R_Label>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_NumericTextBox @bind-Value="_viewModelGLB00200Detail.CurrentReversingJournal.NTRANS_AMOUNT"
                              R_ConductorSource="@_conductorJournalPeriod"
                              Enabled="false">
            </R_NumericTextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout>
        <R_ItemLayout>
            <R_Grid @ref="_gridReversingDetail"
                    DataSource="_viewModelGLB00200Detail.DetailReversingJournalList"
                    R_ConductorGridSource="_conductorReversingJournalDetail"
                    R_GridType="R_eGridType.Original"
                    R_ServiceGetListRecord="ServiceGetListRecord"
                    Pageable
                    AllowAddNewRow="false"
                    AllowDeleteRow="false"
                    AllowEditRow="false"
                    Width="650px">
                <R_GridColumns>
                    <R_GridNumericColumn Width="75px" FieldName="INO"
                                         HeaderText="No.">
                    </R_GridNumericColumn>
                    <R_GridTextColumn Width="150px" FieldName="CGLACCOUNT_NO"
                                      HeaderText="Account No.">
                    </R_GridTextColumn>
                    <R_GridTextColumn Width="150px" FieldName="CGLACCOUNT_NAME"
                                      HeaderText="Account Name">
                    </R_GridTextColumn>
                    <R_GridTextColumn Width="100px" FieldName="CCENTER_NAME"
                                      HeaderText="Center">
                    </R_GridTextColumn>
                    <R_GridTextColumn Width="75px" FieldName="CDBCR"
                                      HeaderText="D/C">
                    </R_GridTextColumn>
                    <R_GridTextColumn Width="100px" FieldName="NDEBIT"
                                      HeaderText="Debit">
                    </R_GridTextColumn>
                    <R_GridTextColumn Width="100px" FieldName="NCREDIT"
                                      HeaderText="Credit">
                    </R_GridTextColumn>
                    <R_GridTextColumn Width="250px" FieldName="CDETAIL_DESC"
                                      HeaderText="Description">
                    </R_GridTextColumn>

                </R_GridColumns>
            </R_Grid>
        </R_ItemLayout>
    </R_StackLayout>

    <R_ConductorGrid @ref="_conductorReversingJournalDetail"
                     R_ViewModel="_viewModelGLB00200Detail">

    </R_ConductorGrid>

</div>
