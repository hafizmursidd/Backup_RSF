@page "/GLB00200"
@inherits R_Page

<R_StackLayout Class="mb-3">
    <R_StackLayout Row>
        <R_ItemLayout>
            <R_Label Class="me-3">Journal Period:</R_Label>
        </R_ItemLayout>
        <R_ItemLayout xs="1">
            <R_NumericTextBox Min="_viewModelGLB00200.lcGetPeriodYear.IMIN_YEAR"
                              Max="@_viewModelGLB00200.lcGetPeriodYear.IMAX_YEAR"
                              @bind-Value="_viewModelGLB00200.PeriodYear"
                              R_ConductorSource="@_conductorPeriod">
            </R_NumericTextBox>
        </R_ItemLayout>
        <R_ItemLayout xs="1">
            <R_NumericTextBox Class="ms-3" Min="1" Max="12"
                              @bind-Value="_viewModelGLB00200.PeriodMonth">
            </R_NumericTextBox>
        </R_ItemLayout>
        <R_ItemLayout xs="2">
            <R_TextBox MaxLength="30" Class="ms-3" 
                       @bind-Value="_viewModelGLB00200.lcSearchText">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_Button Class="ms-3"
                      OnClick="@GetList_ReversingJournalWithSearch"
                      Text="Search">
            </R_Button>
        </R_ItemLayout>
        <R_ItemLayout>
            <R_Button Class="ms-3" 
                      OnClick="@GetList_ReversingJournalWithCustomPeriod"
                      Text="Show All">
            </R_Button>
        </R_ItemLayout>

    </R_StackLayout>
</R_StackLayout>

<R_StackLayout>
    <R_ItemLayout>
        <R_Grid @ref="@_gridReversing"
                DataSource="_viewModelGLB00200.ReversingJournalProcessList"
                R_ConductorGridSource="@_conductorReversingJournal"
                R_GridType="R_eGridType.Batch"
                R_ServiceGetListRecord="GetList_ReversingJournal"
                Pageable
                AllowDeleteRow="false"
                AllowAddNewRow="false"
                AllowEditRow="false"
                Width="1250px">
            <R_GridColumns>
                <R_GridCheckBoxSelectColumn Width="100px" FieldName="LSELECTED"
                                            R_EnableEdit
                                            R_EnableAdd
                                            ShowSelectAllHeader>
                </R_GridCheckBoxSelectColumn>
                <R_GridTextColumn Width="150px" FieldName="CDEPT_CODE_NAME"
                                  HeaderText="Department">
                </R_GridTextColumn>
                <R_GridTextColumn Width="200px" FieldName="CREF_NO"
                                  HeaderText="Master Ref. No.">
                </R_GridTextColumn>
                <R_GridTextColumn Width="200px" FieldName="CDOC_NO"
                                  HeaderText="Document No.">
                </R_GridTextColumn>
                <R_GridTextColumn Width="200px" FieldName="CDOC_DATE"
                                  HeaderText="Document Date">
                </R_GridTextColumn>
                <R_GridNumericColumn FieldName="ISEQUENCE"
                                     HeaderText="Seq.">
                </R_GridNumericColumn>
                <R_GridTextColumn Width="200px" FieldName="CSTART_DATE"
                                  HeaderText="Start Date">
                </R_GridTextColumn>
                <R_GridTextColumn Width="200px" FieldName="CNEXT_DATE"
                                  HeaderText="Next Date">
                </R_GridTextColumn>
                <R_GridTextColumn Width="200px" FieldName="CTRANS_DESC"
                                  HeaderText="Description">
                </R_GridTextColumn>
                <R_GridTextColumn Width="200px" FieldName="CCURRENCY_CODE"
                                  HeaderText="Currency">
                </R_GridTextColumn>
                <R_GridNumericColumn Width="200px" FieldName="NTRANS_AMOUNT"
                                     HeaderText="Amount">
                </R_GridNumericColumn>
                <R_GridTextColumn Width="200px" FieldName="CLOCAL_CURRENCY_CODE"
                                  HeaderText="Local Currency">
                </R_GridTextColumn>
                <R_GridNumericColumn Width="200px" FieldName="NLTRANS_AMOUNT"
                                     HeaderText="Local Amount">
                </R_GridNumericColumn>
                <R_GridTextColumn Width="200px" FieldName="CBASE_CURRENCY_CODE"
                                  HeaderText="Base Currency">
                </R_GridTextColumn>
                <R_GridNumericColumn Width="200px" FieldName="NBTRANS_AMOUNT"
                                     HeaderText="Base Amount">
                </R_GridNumericColumn>
            </R_GridColumns>
        </R_Grid>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Class="mt-3" Row>
    <R_ItemLayout>
        <R_Button Text="Process">
        </R_Button>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button Class="ms-3" Text="Detail">
        </R_Button>
    </R_ItemLayout>
</R_StackLayout>
<R_ConductorGrid @ref="_conductorReversingJournal"
                 R_ViewModel="_viewModelGLB00200"
                 R_IsHeader>

</R_ConductorGrid>
