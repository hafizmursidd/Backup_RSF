
@using GST00500Common
@inherits R_Page

<div hidden="@IsRejectModalHidden">
    <R_ItemLayout xs="10">
        <R_Label Class="fw-bold">Reject Transaction</R_Label>
    </R_ItemLayout>


    <R_StackLayout Class="mb-4">
        @*Dropdown Reason of Rejection*@
        <R_StackLayout Row>
            <R_ItemLayout xs="6">
                <R_Label Class="fw-bold">Reason Of Rejection</R_Label>
            </R_ItemLayout>


            <R_ItemLayout xs="6">
                <R_DropDownList Data="@_viewModelGST00500Inbox.ReasonOfRejectList"
                                @bind-Value="_viewModelGST00500Inbox.ParamTransactionStatus.CREASON_CODE"
                                ValueField="@nameof(GST00500RejectDTO.CCODE)"
                                TextField="@nameof(GST00500RejectDTO.CDESCRIPTION)"
                                R_ConductorGridSource="@_conductorRejectPopUp">
                </R_DropDownList>
            </R_ItemLayout>
        </R_StackLayout>

        @*Reject Note*@
        <R_StackLayout Row>
            <R_ItemLayout xs="6">
                <R_Label Class="fw-bold">Rejection Note</R_Label>
            </R_ItemLayout>


            <R_ItemLayout xs="6">
                <R_TextArea @bind-Value="_viewModelGST00500Inbox.ParamTransactionStatus.TNOTES"
                            R_ConductorGridSource="@_conductorRejectPopUp">

                </R_TextArea>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>
    <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout xs="2">
            <R_Button R_ConductorGridSource="@_conductorRejectPopUp"
                      OnClick="OnClickOKRejectButton">
                OK
            </R_Button>

        </R_ItemLayout>
        <R_ItemLayout xs="2">
            <R_Button OnClick="OnClickCancelButton">
                Cancel
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>

    <R_ConductorGrid R_ViewModel="_viewModelGST00500Inbox">

    </R_ConductorGrid>

</div>